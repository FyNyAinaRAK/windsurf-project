{
  "name": "nellfaa-backend",
  "description": "Backend API pour Nell'Faa Groupe",
  "scripts": {
    "start": "gunicorn nellfaa_backend.wsgi:application"
  },
  "env": {
    "DEBUG": "False",
    "SECRET_KEY": {
      "description": "Clé secrète Django (générée automatiquement)",
      "generator": "secret"
    },
    "ALLOWED_HOSTS": ".simafri.com,.nellfaa-groupe.com",
    "CORS_ALLOWED_ORIGINS": "https://nellfaa-groupe.com,https://www.nellfaa-groupe.com",
    "DATABASE_URL": {
      "description": "URL de connexion à la base de données PostgreSQL",
      "required": true
    },
    "WHITENOISE_MANIFEST_STRICT": "False"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "python manage.py test"
      }
    }
  }
}
