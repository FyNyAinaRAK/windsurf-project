# Django Configuration - PRODUCTION
# IMPORTANT: Générez une nouvelle SECRET_KEY pour la production
SECRET_KEY=votre-secret-key-de-production-ici
DEBUG=False
ALLOWED_HOSTS=votre-backend.onrender.com,www.nellfaa-groupe.mg
DJANGO_LOG_LEVEL=WARNING

# Database Configuration - PostgreSQL pour la production
# Obtenez cette URL depuis votre service d'hébergement (Render, Railway, etc.)
DATABASE_URL=postgresql://user:password@host:5432/nellfaa_db

# CORS Configuration - Production (domaines autorisés uniquement)
CORS_ALLOWED_ORIGINS=https://nellfaa-groupe.onrender.com,https://www.nellfaa-groupe.mg
CSRF_TRUSTED_ORIGINS=https://nellfaa-groupe.onrender.com,https://www.nellfaa-groupe.mg,https://votre-backend.onrender.com

# Security Settings - Production (HTTPS obligatoire)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Email Configuration - SMTP réel pour la production
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre-email@gmail.com
EMAIL_HOST_PASSWORD=votre-app-password-gmail
DEFAULT_FROM_EMAIL=contact@nellfaa-groupe.mg
